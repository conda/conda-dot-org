#!/usr/bin/env bash
set -euo pipefail

HERE=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

pushd $(mktemp -d)
curl -sL https://github.com/conda/governance/archive/refs/heads/main.tar.gz -o governance.tar.gz
# Governance
tar -C "${HERE}/../community" -xf governance.tar.gz --strip-components 1 "governance-main/README.md"
sed \
    -e 's/# Conda & Conda-Incubator Governance/# Governance/' \
    -e 's/CODE_OF_CONDUCT.md/code-of-conduct.md/g' \
    "${HERE}/../community/README.md" > "${HERE}/../community/governance.md"
rm "${HERE}/../community/README.md"
# Code of conduct
tar -C "${HERE}/../community" -xf governance.tar.gz --strip-components 1 "governance-main/CODE_OF_CONDUCT.md"
sed \
    -e 's/# Conda Organization Code of Conduct/# Code of conduct/' \
    "${HERE}/../community/CODE_OF_CONDUCT.md" > "${HERE}/../community/code-of-conduct.md"
rm "${HERE}/../community/CODE_OF_CONDUCT.md"

# Minutes (part A)
rm ${HERE}/../community/minutes/*.md || true
tar -C "${HERE}/../community/minutes" -xf governance.tar.gz --strip-components 3 "governance-main/meetings/archive/"
popd

# Minutes (part B)
pushd "${HERE}/../community/minutes"
for f in *.md; do
    # Rename files from YYYYMMDD_agenda_and_minutes.md to YYYY-MM-DD.md
    datename="${f:0:4}-${f:4:2}-${f:6:2}"
    echo "---" > "${datename}.md"
    echo "sidebar_label: '${datename}'" >> "${datename}.md"
    if [[ $(head -1 "$f") == --- ]]; then
        tail -n+2 "$f" >> "${datename}.md"
    else
        echo "tags: [meeting-notes]" >> "${datename}.md"
        echo "---" >> "${datename}.md"
        cat "$f" >> "${datename}.md"
    fi
    rm "$f"
done

# Fix some markdown issues
for f in 2020-08-24.md 2020-09-08.md 2020-09-22.md; do
    sed -i.bak 's/]()/](#)/g' "$f"
    rm "$f.bak"
done
sed -i.bak \
    -e 's|](conda.org)|](https://conda.org)|g' \
    -e 's|](github.org)|](https://github.org)|g' \
    "2020-09-08.md"
rm 2020-09-08.md.bak
popd

# Teams
mkdir -p "${HERE}/../community/teams"
rm -rf "${HERE}/../community/teams/**/*.yml" || true
pushd $(mktemp -d)
curl -sL https://github.com/conda/governance/archive/refs/heads/fix-teams.tar.gz -o governance.tar.gz
tar -C "${HERE}/../community/teams" -xf governance.tar.gz --strip-components 2 "governance-fix-teams/teams/"
popd

pushd "${HERE}/../community/teams"
for yaml in "${HERE}/../community/teams"/**/*.yml; do
    mkdir -p "$(dirname $yaml)"
    name=$(basename $yaml)
    uv run -s "${HERE}/../bin/render-teams.py" "$yaml" > "$(dirname $yaml)/${name%.*}.md"
    rm "$yaml"
done
rm "${HERE}/../community/teams/teams.schema.json"
popd
